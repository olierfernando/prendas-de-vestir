<%= simple_form_for @datos_del_cliente, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre %>
  <%= f.input :cedula %>
  <%= f.input :apellido %>
  <%= f.input :telefono %>
  <%= f.input :direccion %>
  <%= f.input :email %>
  <%= f.input :ciudad %>
  <%= f.input :forma_de_pago %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                datos_del_clientes_path, :class => 'btn' %>
  </div>
<% end %>
