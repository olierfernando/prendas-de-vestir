<%= simple_form_for @producto, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.collection_select :ficha_id, Ficha.all, :id, :codigo %>
  <%= f.input :referencia %>
  <%= f.input :precio %>
  <%= f.input :cantidad %>
  <%= f.input :talla_id %>
  <%= f.collection_select :color_id, Color.all, :id, :nombre %>
  <%= f.collection_select :terminado_id, Terminado.all, :id, :bordados %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                productos_path, :class => 'btn' %>
  </div>
<% end %>
