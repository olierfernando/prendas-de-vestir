<%- model_class = Producto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ficha_id) %></th>
      <th><%= model_class.human_attribute_name(:referencia) %></th>
      <th><%= model_class.human_attribute_name(:precio) %></th>
      <th><%= model_class.human_attribute_name(:cantidad) %></th>
      <th><%= model_class.human_attribute_name(:talla_id) %></th>
      <th><%= model_class.human_attribute_name(:color_id) %></th>
      <th><%= model_class.human_attribute_name(:terminado_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= link_to producto.id, producto_path(producto) %></td>
        <td><%= producto.ficha_id %></td>
        <td><%= producto.referencia %></td>
        <td><%= producto.precio %></td>
        <td><%= producto.cantidad %></td>
        <td><%= producto.talla_id %></td>
        <td><%= producto.color_id %></td>
        <td><%= producto.terminado_id %></td>
        <td><%=l producto.created_at %></td>
        <td>
          <%= link_to t('.EditR', :default => t("helpers.links.Editar")),
                      edit_producto_path(producto), :class => 'btn btn-mini' %>
          <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
                      producto_path(producto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.Nuevo', :default => t("helpers.links.Nuevo")),
            new_producto_path,
            :class => 'btn btn-primary' %>
