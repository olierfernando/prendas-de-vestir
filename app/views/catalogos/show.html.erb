<%- model_class = Catalogo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:camisa) %>:</strong></dt>
  <dd><%= @catalogo.camisa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vestido) %>:</strong></dt>
  <dd><%= @catalogo.vestido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ropa_interior) %>:</strong></dt>
  <dd><%= @catalogo.ropa_interior %></dd>
  <dt><strong><%= model_class.human_attribute_name(:faldas) %>:</strong></dt>
  <dd><%= @catalogo.faldas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:blusas) %>:</strong></dt>
  <dd><%= @catalogo.blusas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:jeans) %>:</strong></dt>
  <dd><%= @catalogo.jeans %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zapatos) %>:</strong></dt>
  <dd><%= @catalogo.zapatos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tacones) %>:</strong></dt>
  <dd><%= @catalogo.tacones %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.Atras', :default => t("helpers.links.Atras")),
              catalogos_path, :class => 'btn'  %>
  <%= link_to t('.Editar', :default => t("helpers.links.Editar")),
              edit_catalogo_path(@catalogo), :class => 'btn' %>
  <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
              catalogo_path(@catalogo),
              :method => 'delete',
              :data => { :confirm => t('.Esta seguro', :default => t("helpers.links.confirm", :default => 'Esta seguro?')) },
              :class => 'btn btn-danger' %>
</div>
