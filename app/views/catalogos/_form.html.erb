<%= simple_form_for @catalogo, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :camisa %>
  <%= f.input :vestido %>
  <%= f.input :ropa_interior %>
  <%= f.input :faldas %>
  <%= f.input :blusas %>
  <%= f.input :jeans %>
  <%= f.input :zapatos %>
  <%= f.input :tacones %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                catalogos_path, :class => 'btn' %>
  </div>
<% end %>
