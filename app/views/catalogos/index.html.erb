<%- model_class = Catalogo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:camisa) %></th>
      <th><%= model_class.human_attribute_name(:vestido) %></th>
      <th><%= model_class.human_attribute_name(:ropa_interior) %></th>
      <th><%= model_class.human_attribute_name(:faldas) %></th>
      <th><%= model_class.human_attribute_name(:blusas) %></th>
      <th><%= model_class.human_attribute_name(:jeans) %></th>
      <th><%= model_class.human_attribute_name(:zapatos) %></th>
      <th><%= model_class.human_attribute_name(:tacones) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @catalogos.each do |catalogo| %>
      <tr>
        <td><%= link_to catalogo.id, catalogo_path(catalogo) %></td>
        <td><%= catalogo.camisa %></td>
        <td><%= catalogo.vestido %></td>
        <td><%= catalogo.ropa_interior %></td>
        <td><%= catalogo.faldas %></td>
        <td><%= catalogo.blusas %></td>
        <td><%= catalogo.jeans %></td>
        <td><%= catalogo.zapatos %></td>
        <td><%= catalogo.tacones %></td>
        <td><%=l catalogo.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_catalogo_path(catalogo), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      catalogo_path(catalogo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_catalogo_path,
            :class => 'btn btn-primary' %>
