<%= simple_form_for @catalogo_hom, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :jeans %>
  <%= f.input :camisa %>
  <%= f.input :chaquetas %>
  <%= f.input :tenis %>
  <%= f.input :camisilla %>
  <%= f.input :pantaloneta %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                catalogo_homs_path, :class => 'btn' %>
  </div>
<% end %>
