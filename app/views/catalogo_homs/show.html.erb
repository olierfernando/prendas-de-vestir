<%- model_class = CatalogoHom -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:jeans) %>:</strong></dt>
  <dd><%= @catalogo_hom.jeans %></dd>
  <dt><strong><%= model_class.human_attribute_name(:camisa) %>:</strong></dt>
  <dd><%= @catalogo_hom.camisa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chaquetas) %>:</strong></dt>
  <dd><%= @catalogo_hom.chaquetas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tenis) %>:</strong></dt>
  <dd><%= @catalogo_hom.tenis %></dd>
  <dt><strong><%= model_class.human_attribute_name(:camisilla) %>:</strong></dt>
  <dd><%= @catalogo_hom.camisilla %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pantaloneta) %>:</strong></dt>
  <dd><%= @catalogo_hom.pantaloneta %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.Atras', :default => t("helpers.links.Atras")),
              catalogo_homs_path, :class => 'btn'  %>
  <%= link_to t('.Editar', :default => t("helpers.links.Editar")),
              edit_catalogo_hom_path(@catalogo_hom), :class => 'btn' %>
  <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
              catalogo_hom_path(@catalogo_hom),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro?')) },
              :class => 'btn btn-danger' %>
</div>
